#include <iostream>
#include <iomanip>
#include <cstdlib>
#include <ctime>

using namespace std;

const int NUM_VALS = 10;

int reverse(int num); 
bool isPrime(int num);
bool isPalindrome(int num); 
int sumDigits(int num);

int main()
{
	int number;
	int loopCount; 
	
	srand(1);

	for(loopCount = 1; loopCount <= NUM_VALS; loopCount++)
	{
		number = rand();

		cout << "The number is " << number << endl
		<< "----------------------------------------" << endl
    	<< "Adding the digits result" << setw(16) << sumDigits( number ) << endl
    	<< "Reversing the digits result" << setw(13) << reverse(number) << endl
    	<< "Is the number a palindrome?" << setw(13) << (isPalindrome(number)? "Yes" : "No") << endl
    	<< "Is the number prime?" << setw(20) << (isPrime(number)? "Yes" : "No") << endl
		<< endl << endl;
	}
	return 0;
}

int sumDigits(int num) 
{
	int sum = 0, rem;
	while(num != 0) 
	{               
		rem = num % 10;
		sum += rem;
		num /= 10;
	}
	return sum;
}

int reverse(int num)
{
	int reversed = 0;
	int quo, rem;
	quo = num;  
  	while (quo != 0) 
	{
    	rem = quo % 10;
    	reversed = reversed * 10 + rem;
    	quo /= 10;
  	}
	return reversed;
}

bool isPalindrome(int num) 
{	
	if (reverse(num) == num) 
	return true;
		else
		return false;
}

bool isPrime(int num) 
{
	int i;
	
	if (num % 2 == 0) 
		return false;
	for (i = 3; i*i <= num; i+=2) 
	{
		if (num % i == 0)
		return false;
	}
	return true;
}
